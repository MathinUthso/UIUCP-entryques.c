# UIUCP-entryques.c
#include<stdio.h>
int main(){
    int n;
     //printf("n:");
      scanf("%d",&n);
    int i;
     for (i=0;i<n;i++){
        char arr[101];
         scanf("%s",arr);
         int sum=0;
     int j;
      for(j=0;arr[j]!='\0';j++){
         sum++;
      } 
    
    if(sum>4){
        printf("%c%d%c\n",arr[0],sum-2,arr[sum-1]);
    }  
    else{
        printf("%s\n",arr);
    }
     }  
    return 0;
}
